<h1>Register</h1>

<section class="Form-Container">

  <%= form_with url: users_path, method: :post do |form| %>
    <div class="Form-section">
      <p>First name: </p>
      <%= form.text_field :first_name, class: "Form-Input" %>
    </div>

    <div class="Form-section">
      <p>last name: </p>
      <%= form.text_field :last_name, class: "Form-Input" %>
    </div>

    <div class="Form-section">
      <p>Email: </p>
      <%= form.email_field :email, class: "Form-Input" %>
    </div>

    <div class="Form-section">
      <p>Password: </p>
      <%= form.password_field :password, class: "Form-Input" %>
    </div>

    <%= form.submit :Register, class: "primary-btn" %>

  <% end %>

</section>

<%= link_to "Sign in", new_sessions_path %>

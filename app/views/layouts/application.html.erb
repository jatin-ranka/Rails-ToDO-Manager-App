<!DOCTYPE html>
<html>
  <head>
    <title>RailsTodoManagerApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <%if flash[:error]%>
    <p class="flash-error">
      <%= flash[:error]%>
    </p>
  <% end %>

  <%if @current_user%>
    <div class="user-container">
      <p class="user-name-heading">Welcome: <%= @current_user.first_name %>  </p>

      <%= link_to "Sign out", destroy_session_path, method: :delete, class: "primary-btn" %>

    </div>
  <% end %>

    <%= yield %>
  </body>
</html>
